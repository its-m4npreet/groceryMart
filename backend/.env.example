# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Connection
MONGO_URI=mongodb://localhost:27017/grocery_ecommerce

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRE=30d
# Token expiration format: 
#   - 30d = 30 days
#   - 7d = 7 days
#   - 24h = 24 hours
#   - 60m = 60 minutes

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Email Configuration (Optional - for password reset OTP emails)
# Leave empty for development (will log to console instead)
# For production, use your SMTP credentials (Gmail, SendGrid, etc.)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=GroceryMart <noreply@grocerymart.com>

# Client URL for CORS
CLIENT_URL=http://localhost:5173
